                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>

                <!-- Example table to display users (for login accounts) -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Fetch users from database and display in table -->
                        <?php
                        $query = "SELECT id, email FROM user_logins";
                        $result = $conn->query($query);

                        if ($result->num_rows > 0) {
                            while ($row = $result->fetch_assoc()) {
                                echo "<tr>";
                                echo "<td>" . $row['id'] . "</td>";
                                echo "<td>" . $row['email'] . "</td>";
                                echo "<td>
                                        <a href='edit_user.php?id=" . $row['id'] . "' class='btn btn-sm btn-warning'>Edit</a>
                                        <a href='delete_user.php?id=" . $row['id'] . "' class='btn btn-sm btn-danger'>Delete</a>
                                      </td>";
                                echo "</tr>";
                            }
                        } else {
                            echo "<tr><td colspan='3'>No users found.</td></tr>";
                        }
                        ?>
                    </tbody>
                </table>

                <hr>

                <!-- User Accounts Section -->
                <h3 id="user-accounts">User Accounts</h3>
                <p>Below is the list of all registered user accounts.</p>

                <!-- Example table to display user accounts -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Middle Name</th>
                            <th>Email</th>
                            <th>Contact Number</th>
                            <th>Birthdate</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Civil Status</th>
                            <th>Address</th>
                            <th>Purpose</th>
                            <th>Document</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Fetch user account details from database -->
                        <?php
                        $query = "SELECT id, firstname, lastname, middle_name, email, contactnumber, birthdate, age, gender, civil_status, address, purpose, document FROM users";
                        $result = $conn->query($query);

                        if ($result->num_rows > 0) {
                            while ($row = $result->fetch_assoc()) {
                                echo "<tr>";
                                echo "<td>" . $row['id'] . "</td>";
                                echo "<td>" . $row['firstname'] . "</td>";
                                echo "<td>" . $row['lastname'] . "</td>";
                                echo "<td>" . $row['middle_name'] . "</td>";
                                echo "<td>" . $row['email'] . "</td>";
                                echo "<td>" . $row['contactnumber'] . "</td>";
                                echo "<td>" . $row['birthdate'] . "</td>";
                                echo "<td>" . $row['age'] . "</td>";
                                echo "<td>" . $row['gender'] . "</td>";
                                echo "<td>" . $row['civil_status'] . "</td>";
                                echo "<td>" . $row['address'] . "</td>";
                                echo "<td>" . $row['purpose'] . "</td>";

                                // Check if a document exists and display it
                                if (!empty($row['document'])) {
                                    echo "<td><img src='" . $row['document'] . "' alt='User Document' width='100' height='100'></td>";
                                } else {
                                    echo "<td>No document</td>";
                                }

                                echo "</tr>";
                            }
                        } else {
                            echo "<tr><td colspan='12'>No user accounts found.</td></tr>";
                        }
                        ?>
                    </tbody>
                </table>

                <hr>

                <!-- Activities Section -->
                <h3 id="activities">Activities</h3>
                <p>Manage user activities here.</p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php if ($pendingUsersResult->num_rows > 0): ?>
                            <?php while ($user = $pendingUsersResult->fetch_assoc()): ?>
                                <tr>
                                    <td><?php echo $user['id']; ?></td>
                                    <td><?php echo $user['firstname']; ?></td>
                                    <td><?php echo $user['lastname']; ?></td>
                                    <td><?php echo $user['email']; ?></td>
                                    <td>
                                        <form method="POST" style="display:inline;">
                                            <input type="hidden" name="user_id" value="<?php echo $user['id']; ?>">
                                            <button type="submit" name="action" value="approve" class="btn btn-sm btn-success">Approve</button>
                                            <button type="submit" name="action" value="decline" class="btn btn-sm btn-danger">Decline</button>
                                        </form>
                                    </td>
                                </tr>
                            <?php endwhile; ?>
                        <?php else: ?>
                            <tr><td colspan="5">No pending requests found.</td></tr>
                        <?php endif; ?>
                    </tbody>
                </table>

                <hr>

                <!-- History Section -->
                <h3 id="history">History</h3>
                <p>View approved and declined users here.</p>
                <h4>Approved Users</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
