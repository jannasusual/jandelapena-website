                    <tbody>
                        <?php if ($approvedUsersResult->num_rows > 0): ?>
                            <?php while ($user = $approvedUsersResult->fetch_assoc()): ?>
                                <tr>
                                    <td><?php echo $user['id']; ?></td>
                                    <td><?php echo $user['firstname']; ?></td>
                                    <td><?php echo $user['lastname']; ?></td>
